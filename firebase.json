{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "environmentVariables": {
        "FIREBASE_PROJECT_ID": "${FIREBASE_PROJECT_ID}",
        "SERVICE_ACCOUNT_KEY": "gs://reactnativegolfapp.appspot.com/reactnativegolfapp-firebase-adminsdk-gbvux-ab7bc7f390.json",
        "PAYMENT_METHOD_TYPES": "card",
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}"
      },
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    },
    {
      "source": "golf-app-functions",
      "codebase": "golf-app-functions",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
